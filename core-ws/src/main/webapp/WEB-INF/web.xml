<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>classpath:ecomm-core-beans.xml</param-value>
    </context-param>

    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>

    <filter>
        <filter-name>forceUTF8RequestParametersFilter</filter-name>
        <filter-class>ee.ttu.ecomm.core.utils.ForceUTF8RequestParametersFilter</filter-class>
    </filter>
    <!--<filter>-->
        <!--<filter-name>RequestLogFilter</filter-name>-->
        <!--<filter-class>ee.ttu.ecomm.core.utils.RequestLogFilter</filter-class>-->
    <!--</filter>-->

    <filter-mapping>
        <filter-name>forceUTF8RequestParametersFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <!--<filter-mapping>-->
        <!--<filter-name>RequestLogFilter</filter-name>-->
        <!--<url-pattern>/*</url-pattern>-->
    <!--</filter-mapping>-->

    <error-page>
        <error-code>500</error-code>
        <location>/error/500.jsp</location>
    </error-page>

</web-app>