<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <display-name>E-Commerce Core</display-name>

    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>classpath:app-context.xml</param-value>
    </context-param>

    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>

    <filter>
        <filter-name>forceUTF8RequestParametersFilter</filter-name>
        <filter-class>ee.ttu.ecomm.core.utils.ForceUTF8RequestParametersFilter</filter-class>
    </filter>
    <!--<filter>-->
        <!--<filter-name>RequestLogFilter</filter-name>-->
        <!--<filter-class>ee.ttu.ecomm.core.utils.RequestLogFilter</filter-class>-->
    <!--</filter>-->

    <servlet>
        <servlet-name>Core Servlet</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
        <init-param>
            <param-name>contextConfigLocation</param-name>
            <param-value>classpath:servlet-context.xml</param-value>
        </init-param>
    </servlet>


    <filter-mapping>
        <filter-name>forceUTF8RequestParametersFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <!--<filter-mapping>-->
        <!--<filter-name>RequestLogFilter</filter-name>-->
        <!--<url-pattern>/*</url-pattern>-->
    <!--</filter-mapping>-->

    <servlet-mapping>
        <servlet-name>Core Servlet</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>

    <error-page>
        <error-code>500</error-code>
        <location>/error/500.jsp</location>
    </error-page>

</web-app>